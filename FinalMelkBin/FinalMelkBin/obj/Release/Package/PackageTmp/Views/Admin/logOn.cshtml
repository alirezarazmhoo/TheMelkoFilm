
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ملکوفیلم</title>
    <link href="~/vendors/bower_components/bootstrap-theme.css" rel="stylesheet" />
    <!-- Bootstrap rtl -->
    <link href="~/vendors/bower_components/rtl.css" rel="stylesheet" />
    <!-- persian Date Picker -->
    <!-- Font Awesome -->
    <link href="~/vendors/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/vendors/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/vendors/bower_components/AdminLTE.css" rel="stylesheet" />
    <link href="~/vendors/bower_components/_all-skins.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">*@
</head>


@{
    var ReturnUrl = Request["ReturnUrl"] == null ? "" : Request["ReturnUrl"];
}
@if (@ViewBag.Error != null)
{

    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Error");
        }
    </script>
}
    <body class="hold-transition skin-blue sidebar-mini">
       
                <div class="wrapper" style="background-color:white !important;">

                    <!-- Content Header (Page header) -->
                    
                        <div class="row">
                            <!-- left column -->
                            <div class="col-md-4">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">فرم ورود</h3>
                                    </div>
                                    
                                                <div class="login-content">
                                                    <form method="post" action="../Admin/logOn">
                                                        <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />
                                                        <div class="box-body">
                                                            <div class="form-group">
                                                                <label for="UserName">نام کاربری</label>
                                                                <input id="UserName" type="text" name="UserName" placeholder="نام کاربری" class="form-control">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="Password">رمز عبور</label>

                                                                <input id="Password" type="password" name="Password" placeholder="رمز عبور" class="form-control">
                                                            </div>
                                                            <div class="form-group">

                                                                <div class="col-sm-10">
                                                                    <div class="checkbox">
                                                                        <label for="IsRemember">
                                                                            <input type="checkbox" name="IsRemember" id="IsRemember"> مرا به خاطر بسپار
                                                                        </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <button type="submit" class="btn btn-primary btn-block"> ورود</button>
                                                            </div>
                                                        </div>

                                                    </form>
                                                </div>
                                           
                                </div>
                            </div>
                        </div>
                    
                </div>
    </body>
</html>


